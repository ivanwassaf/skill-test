    "test:unit": "mocha \"test/*.test.js\" --timeout 10000 --exit",
    "test:integration": "mocha \"test/integration/**/*.test.js\" --timeout 15000 --exit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:coverage": "nyc --reporter=html --reporter=text mocha \"test/**/*.test.js\" --exclude \"test/e2e/**\" --timeout 10000 --exit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
